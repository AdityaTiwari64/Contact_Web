<div class="form-group mb-4">
    <label for="title">Title</label>
    <input type="text" class="form-control" required autocomplete="off" value="<%= article.title%>" name="title" id="title">

</div>
<div class="form-group mb-4">
    <label for="desc">Description</label>
    <input type="text" class="form-control" required autocomplete="off" value="<%= article.desc%>" name="desc" id="desc">
</div>
<div class="form-group mb-4">
    <label for="markdown">Content</label>
    <textarea type="text" class="form-control" required autocomplete="off"  name="markdown" id="markdown"><%= article.markdown%></textarea>
</div>

<a href="/" class="btn btn-danger">Cancel</a>
<button type="submit" class="btn btn-success">Save</button>