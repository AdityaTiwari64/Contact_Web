<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Blogspot</title>
  </head>

  <body>
    <div class="container">
      <h1 class="mb-4 mt-4 text-center">Blog Articles</h1>
      <a href="/articles/new" class="btn btn-primary">New Articles</a>

      <!-- All Articles Will Be Listedx Here -->
      <% articles.forEach(article =>{ %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title">
            <%= article.title %>
          </h4>
          <p><%= article.createdAt.toLocaleDateString()%></p>
          <p><%= article.desc %></p>
          <a href="/articles/<%= article.id%>" class="btn btn-warning">Read More</a>
          <form action="/articles/<%= article.id%>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% } )%>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
  </body>
  
</html>